<h1>Add Students</h1>
<%= form_for :pages, url: pages_path do|f| %>
    <p>
        <%= f.label :username %><br>
        <%= f.text_field(:username, {:class => 'form-control'}) %>
    </p>

    <p> 
        <%= f.label :password %><br>
        <%= f.text_area(:password,{:class => 'form-control'}) %>
    </p>

    <p>
        <%=f.submit({:class => 'btn btn-primary'}) %>
        </p>
    <% end %>